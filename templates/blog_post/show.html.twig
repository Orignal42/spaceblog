{% extends 'base.html.twig' %}

{% block title %}BlogPost
{% endblock %}

{% block body %}
	{% include 'header.html.twig' %}
	<div class='boutonrond'>
	<a href="{{path('home')}}" class="btn back">
		<b>Retour</b>
	</a>	
	  <div id='rond'> </div>
	   <div id='rond2'> </div>
	   </div>
	<div class="container">
		{% for blog_post in blog_post %}
			<div class="article">
				<div class="pictureshow">
					<img class="card-img" src="{{ asset ('uploads/cover/' ~ blog_post.cover)}}" alt="Card image cap" style="width: 18rem;">
				</div>
				<div class="titleshow">
					<h1 class="contentblog">{{ blog_post.title }}</h1>
				</div>
				<div class="content">
					{{ blog_post.content | raw }}
				</div>
				<div class="publish">
					<p>
						<i>publi√© le
							{{ blog_post.createdat|date('d-m-Y H:m') }}
						</i>
					</p>
				</div>
			{% endfor %}
		</div>

	</div>

{% include 'footer.html.twig' %}

{% endblock %}

