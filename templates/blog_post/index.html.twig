{% extends 'base.html.twig' %}

{% block title %}BlogPost index
{% endblock %}

{% block body %}
	{# {% include 'header.html.twig' %} #}
	<div class="container">
		<div class="row">
			<h1>Nos articles</h1>
			<div class="cards">
			{% for blog_post in blog_posts %}
					<div class="col-md-12 col-sm-12 col-lg-4 col-xl-4">
						<a href="{{ path ('blog_post_show',{'id':blog_post.slug})}}">
                        <div class='card'>
							<img class="card-img" src="{{ asset ('uploads/cover/' ~ blog_post.cover)}}" alt="Card image cap" >
						</div>
						<div class='card titleindex'>
							<p class='linkblog'>{{blog_post.title}}</p>
                        </a>
					</div>
					</div>
				{% else %}
					<tr>
						<td colspan="6">no records found</td>
					</tr>
				{% endfor %}
			</div>
		</div>
	</div>

{% endblock %}

